<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 2hours.com</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("2hours", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                    <li>@Html.ActionLink("Shop Now", "ShopProducts", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>
    @{
        if (Request.IsAuthenticated)
        {
                            <li>@Html.ActionLink("User Area", "UserArea", "Account")</li>

                            if ((User.IsInRole("Admin")))
                            {
                                <li>@Html.ActionLink("Administrators", "AdminOnly", "Account")</li>
                                <li>@Html.ActionLink("Orders", "AdminOrders", "Account")</li>
                                <li>@Html.ActionLink("Products", "AdminProducts", "Account")</li>
                                <li>@Html.ActionLink("Suppliers", "AdminSuppliers", "Account")</li>
                                <li>@Html.ActionLink("Users", "AdminViewUsers", "Account")</li>

            }

                            <li><span class="label label-info">@Html.Raw(User.Identity.Name)</span></li>
                            <li><a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
    }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        }

                    }
                    <li>
                        <a href="@Url.Action("ViewCart", "Cart")" data-toggle="tooltip" title="Cart">
                            <span class="glyphicon glyphicon-shopping-cart" data-toggle="tooltip" title="Cart"></span> Shopping Cart
                            @if (Session["shoppingCart"] != null)
        {
                                <span class="badge">@Session["shoppingCart"]</span>
    }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 2hours.com</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>