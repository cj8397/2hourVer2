
@{
    ViewBag.Title = "ForgotPassword";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm("ResetPassword", "Home"))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="email" class="control-label col-md-2">Please enter your email address:</label>
                <input type="text" name="email" placeholder="email@2hours.com" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        </div>
        }
        <div>
            @Html.Raw(ViewBag.FakeEmailMessage)
        </div>

