
@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset Password</h2>

@using (Html.BeginForm("ResetPassword", "Account"))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="password" class="control-label col-md-2">New Password</label>
                <input type="password" name="password" class="form-control" data-val="true" data-val-required="The Password field is required." id="password" />
                <span data-valmsg-for="password" data-valmsg-replace="true"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <label for="confirmpwd" class="control-label col-md-2">Confirm Password</label>
                <input type="password" name="confirmpwd" id="confirmpwd" class="form-control" data-val="true" data-val-equalto="The new password and confirmation password do not match." data-val-equalto-other="*.Password" data-val-required="The Password Confirm field is required." />
                <span data-valmsg-for="confirmpwd" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" />
            </div>
        </div>

        <input type="hidden" value="@ViewBag.UserID" name="userID" />
        <input type="hidden" value="@ViewBag.PasswordToken" name="passwordToken" />
    </div>
}
<div>
    @Html.Raw(ViewBag.FakeEmailMessage)
</div>

